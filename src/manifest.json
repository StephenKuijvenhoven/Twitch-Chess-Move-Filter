{
  "manifest_version": 3,

  "name": "Twitch Chess move filter",
  "version": "0.2",
  "description": "Hides chess moves and terms from Twitch chat",
  "action": {
    "default_popup": "options/options.html"
  },
  "permissions": [
    "storage"
  ],
  "icons": {  "16": "icons/icon16.png",
              "48": "icons/icon48.png",
              "128": "icons/icon128.png" },
  "content_scripts": [{
    "js": ["content.js"],
    "css" : ["spoiler.css"],
    "matches": ["https://www.twitch.tv/*"]
  }]
}
